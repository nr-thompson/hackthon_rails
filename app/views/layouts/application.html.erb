<!DOCTYPE html>
<html>
<head>
  <title>HackathonWalker</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

  <!-- <link rel="stylesheet" href="https://code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css"> -->

  <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/css/materialize.min.css">


  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.96.1/js/materialize.min.js"></script>

  <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>

  <!-- google maps -->
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBps9-R66V-5a4IMBC50bf89KE7hF-gmUc&libraries=places"></script>  
  <%= csrf_meta_tags %>


</head>
<body>

  <nav>
    <div class="nav-wrapper">
      <a href="#" class="left logo">Logo</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="">Home</a></li>
        <!-- Modal Trigger -->
        <li><a class="logo btn modal-trigger" href="#modal1">Login</a>

          <!-- Modal Structure -->
          <div id="modal1" class="modal modal-fixed-footer">
            <div class="logo modal-content">
              <h1>login form</h1>

              <form action="/users" method="post">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                
                <input type="text" name='user[email]'>
                <label for='email'>Email</label>
                <input type="password" name='user[password]'>
                <label for='password'>Password</label>
              </div>

              <div class="modal-footer">
                <input type="submit" value="Login">
              </form>
              <a href="/auth/facebook" class="modal-action modal-close waves-effect waves-green btn-flat">Login with Facebook</a>
            </div>
          </div>
        </li>
        <li><a class="logo btn modal-trigger" href="#modal2">Sign Up</a>
          <div id="modal2" class="modal modal-fixed-footer">
            <div class="logo modal-content">
              <h1>signup form</h1>

              <form action="/users" method="post">
                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                
                <input type="text" name='user[name]'>
                <label for='name'>Name</label>
                
                <input type="text" name='user[email]'>
                <label for='email'>Email</label>
                
                <input type="text" name='user[password]'>
                <label for='password'>Password</label>
                
                <input type="text" name='user[password_confirmation]'>
                <label for='password_confirmation'>Password Confirmation</label>

              </div>
              <div class="modal-footer">
                <input type="Submit" value="Sign up">
              </form>
            </div>
          </div>
        </li>
      </ul>
      <% if flash[:errors] %>
      <% flash[:errors].each do |e| %>
      <p><%= e %></p>
      <% end %>
      <% end %>
    </div>
  </nav>



  <% if current_user %>
  <form action='/sessions' method='post'>
    <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
    <input type='hidden' name='_method' value='delete'>
    <input type='submit' value='Log Out'>
  </form>
  <% end %>


  <%= yield %>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="row">
        <div class="col s12">

          <p class="grey-text text-lighten-4">You can use rows and columns here to organize your footer content.</p>
        </div>
        <div class="col l4 offset-l2 s12">
          <h5 class="white-text">Links</h5>
          <ul>
            <li><a class="grey-text text-lighten-3" href="#!">Link 1</a></li>
            <li><a class="grey-text text-lighten-3" href="#!">Link 2</a></li>

          </ul>
        </div>
      </div>
    </div>
    <div class="footer-copyright">
      <div class="container">
        Â© 2015 Copyright Text
        <a class="grey-text text-lighten-4 right" href="#!">More Links</a>
      </div>
    </div>
  </footer>





  <script type="text/javascript">
  $(document).ready(function(){
    // the "href" attribute of .modal-trigger must specify the modal ID that wants to be triggered
    $('.modal-trigger').leanModal();
  });
  </script>   


</body>
</html>




